@model List<BookViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f4f9;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .book-table {
            margin-top: 30px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-add {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

            .btn-add:hover {
                background-color: #0056b3;
            }
        /* Formu daraltıyoruz */
        .form-container {
            max-width: 500px;
            margin: 0 auto;
        }
        /* Input kutularını daraltıyoruz */
        .form-control {
            max-width: 100%;
        }

        /* Tablo sütunlarının genişliğini daraltıyoruz */
        .table th, .table td {
            width: 150px; /* Kitap adı ve yazar adı için dar bir alan */
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        .table th {
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-center">Add a New Book</h1>

        <!-- Kitap Ekleme Formu -->
        <div class="form-container">
            <form method="post" asp-action="AddBook">
                <div class="form-group">
                    <label for="bookName">Book Name:</label>
                    <input type="text" id="bookName" name="bookName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input type="text" id="author" name="author" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-add btn-block">Add Book</button>
            </form>
        </div>

        <!-- Kitaplar Listesi -->
        <div class="book-table">
            <h3 class="text-center mt-5">Books List</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Book Name</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Name</td>
                            <td>@book.Author</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
